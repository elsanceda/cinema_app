    <div class="flex">
        <h1 class="left">Cinemas | </h1>

        <% if logged_in? && current_user.admin? %>
            <div class="admin-btn">
                <%= link_to "+ New Cinema", new_cinema_path,
                                        class: "btn btn-md btn-secondary" %>
            </div>
        <% end %>
    </div>

    <ul class="indices">
        <%= render @cinemas %>
    </ul>

    <%= will_paginate @cinemas %>
</section>