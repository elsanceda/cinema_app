<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <%= link_to "cinema booking", root_path, id: "logo" %>
        <nav>
            <div class="navbar-header">
                <button id="hamburger" type="button" class="navbar-toggle collapsed">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <ul id="navbar-menu" 
                class="nav navbar-nav navbar-right collapse navbar-collapse">
                <li><%= link_to "Home", root_path %></li>
                <li><%= link_to "Movies", movies_path %></li>
                <li><%= link_to "Cinemas", cinemas_path %></li>
                <% if logged_in? %>
                    <% if current_user.admin? %>
                        <li><%= link_to "Admin", admin_path %></li>
                    <% end %>
                    
                    <li>
                        <%= link_to "Log out", logout_path, 
                                               data: { "turbo-method": :delete } %>
                    </li>
                <% else %>
                    <li><%= link_to "Log in", login_path %></li>
                <% end %>
            </ul>
        </nav>
    </div>
</header>