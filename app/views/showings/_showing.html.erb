<li>
    <h2><%= link_to showing.movie.title, showing %></h2>
    <%= time_in_words(showing.timeslot) %> | 
    <%= showing.cinema.name %> <br>
    Available Seats: <%= showing.available_seats.count %></p>

    <% if logged_in? && current_user.admin? %>
        <div class="buttons">
            <%= link_to "Bookings (#{showing.bookings.count})", bookings_showing_path(showing),
                                    class: "booking btn btn-sm btn-secondary" %>
            <%= link_to "Delete", showing, data: { "turbo-method": :delete,
                                                    turbo_confirm: "You sure?" },
                                           class: "btn btn-sm btn-danger" %>
        </div>
    <% end %>
</li>